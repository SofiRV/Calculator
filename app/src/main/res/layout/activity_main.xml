<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calculator"
        android:gravity="start"
        android:background="@color/barbie_pink"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        >

        <TextView
            android:id="@+id/input"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_columnSpan="4"
            android:background="@color/white"
            android:gravity="end"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button_ms"
            android:text="@string/ms"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_mr"
            android:text="@string/mr"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_mplus"
            android:text="@string/mplus"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_mminus"
            android:text="@string/mminus"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_mc"
            android:text="@string/mc"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_clear"
            android:text="@string/clear"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_erase"
            android:text="@string/erase"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_perc"
            android:text="@string/perc"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/button_1"
            android:text="@string/_1"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_2"
            android:text="@string/_2"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_3"
            android:text="@string/_3"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_div"
            android:text="@string/div"
            android:layout_column="3"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_4"
            android:text="@string/_4"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_5"
            android:text="@string/_5"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_6"
            android:text="@string/_6"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_mult"
            android:text="@string/mult"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_7"
            android:text="@string/_7"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_8"
            android:text="@string/_8"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_9"
            android:text="@string/_9"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_minus"
            android:text="@string/minus"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_0"
            android:text="@string/_0"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_00"
            android:text="@string/_00"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_dot"
            android:text="@string/dec"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/button_plus"
            android:layout_height="wrap_content"
            android:layout_rowSpan="3"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:text="@string/plus"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="0dp" />
        <Button
            android:id="@+id/button_equal"
            android:text="@string/equal"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            app:cornerRadius="0dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/barbie_pink"
            android:textColor="@color/black"
            android:textSize="20sp"/>


    </GridLayout>


</LinearLayout>